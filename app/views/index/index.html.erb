<div id="splash-display"></div>
<div id="splash-content">
  <header id="logo"></header>
  <article role="main" class="container_12">
    <% @meetups.each_with_index do |meetup, index| %>
      <section class="grid_3 <%= push_or_pull index %>">
        <a class="chapter_shortcut" href="http://www.meetup.com/<%= meetup[:url] %>">
        <img class="circle" src="<%= asset_path(meetup[:image]) %>" />
        <span class="title"><%= meetup[:city] %></span>
      </a>
    </section>
    <% end %>
  </article>
  <article class="container_12">
    <h3>we hang out each wednesday, join us!</h3>
  </article>
</div>
